// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  description String?
  contains    Ingredients[]
}

model Ingredients {
  id         Int    @id @default(autoincrement())
  ingredient String
  amount     String
  unit       String
  usedIn     Recipe @relation(fields: [usedId], references: [id])
  usedId     Int
}
